/* pages/action/action.wxss */

page{
	display: flex;
	align-items: center;
}

.user-nickname{
  background-color: #5F9EA0;
  color: white;
  font-size: 50rpx;
  width: 100%;
  height: 70rpx;
  margin: 70rpx 0; 
  display: flex;
	position: fixed;
  align-items: center;
  flex-direction: column;
  top: 0rpx;
}

.user-nickname text{
  margin-left: 200rpx;
  font-weight: bold;
}

.user-avatar{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  position: fixed;
  left: 30rpx;
  top: 0;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.codedata{
	margin: 300rpx 100rpx 100rpx 100rpx;
}

.codedata view text{
	font-size: 60rpx;
}

.codeid{
	color: #13BEEC;
}

.codenum{
	color: #FFA500;
}

.center{
	margin: 0 100rpx ;
}

.center-form{
	margin: 100rpx 0;
}

.txt{
	width: 100%;
	font-size: larger;
	font-weight: bold;
}

.number{
	margin: 100rpx 0;
	width: 100%;
	font-size: 80rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.errmsg{
	margin: 100rpx 0;
	width: 100%;
	font-size: 50rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.number input{
	border-bottom: 5rpx solid #13BEEC;
	height: 90rpx;
	font-size: 80rpx;
	width: 80%;
	display: flex;
	justify-content: center;
	align-items: center;
	
}

.btn button{
	background: #FFA500;
	font-weight: bold;
}