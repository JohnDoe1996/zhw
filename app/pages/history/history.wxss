/* pages/history/history.wxss */
.user-nickname{
  background-color: #5F9EA0;
  color: white;
  font-size: 50rpx;
  width: 100%;
  height: 70rpx;
  margin: 70rpx 0; 
  display: flex;
	position: fixed;
  align-items: center;
  flex-direction: column;
  top: 0rpx;
}

.user-nickname text{
  margin-left: 200rpx;
  font-weight: bold;
}

.user-avatar{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  position: fixed;
  left: 30rpx;
  top: 0;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.center{
	margin-top: 250rpx;
	width: 100%;
}

.row{
	margin-left: 10%;
	width: 80%;
	height: 300rpx;
  display: flex;
	justify-content: space-around;
}

.circle{
	width: 250rpx;
	height: 250rpx;
	border-radius: 50%;
	font-size: 50rpx;
	font-weight: bold;
	color: #FFFFFF;
	display: flex;
	justify-content: center;
	align-items: center;
}

#all{
	align-self: flex-start;
	background-color: #7FFFD4;
	}
	
#bought{
	align-self: flex-end;
	background-color: #00FA9A;
	}
#selling{
	align-self: flex-start;
	background-color: #5F9EA0;
	}
#sold{
	align-self: flex-end;
	background-color: #13BEEC;
	}

.footer{
	margin: 50rpx 50rpx;
	position: fixed;
	bottom: 0;
}