/* pages/balance/balance.wxss */

page{
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-nickname{
  background-color: #5F9EA0;
  color: white;
  font-size: 50rpx;
  width: 100%;
  height: 70rpx;
  margin: 70rpx 0; 
  display: flex;
	position: fixed;
  align-items: center;
  flex-direction: column;
  top: 0rpx;
}

.user-nickname text{
  margin-left: 200rpx;
  font-weight: bold;
}

.user-avatar{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  position: fixed;
  left: 30rpx;
  top: 0;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.center{
  width: 100%;
  margin-top: 100rpx;
}

.hello{
  margin-top: 200rpx;
	text-align: center;
	color: #555;
  font-size: 30rpx;
}
.balance{
	margin: 120rpx 0 150rpx 0;
	font-size: 120rpx;
	color: #FFA500;
	display: flex;
	overflow:hidden;
	text-align: center;
	justify-content: center;
}
.charge,
.withdraw
{
	margin: 20rpx 50rpx 20rpx 50rpx;
}
#charge{
	background-color: #13BEEC;
}
#withdraw{
	background-color: orange;
}