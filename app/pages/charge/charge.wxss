/* pages/charge/charge.wxss */

page{
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-nickname{
  background-color: #5F9EA0;
  color: white;
  font-size: 50rpx;
  width: 100%;
  height: 70rpx;
  margin: 70rpx 0; 
  display: flex;
	position: fixed;
  align-items: center;
  flex-direction: column;
  top: 0rpx;
}

.user-nickname text{
  margin-left: 200rpx;
  font-weight: bold;
}

.user-avatar{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  position: fixed;
  left: 30rpx;
  top: 0;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.center{
  width: 100%;
  margin-top: 100rpx;
}

.balance{
	margin: 50rpx 30rpx 50rpx 30rpx;
}
.balance>.balance-txt{
	font-size: 50rpx;
}
.balance>.balance-val{
	font-size: 70rpx;
	color: #FFA500;
}

.charge{
	margin: 80rpx 20rpx 80rpx 20rpx;
}
.charge>.input{
	display: flex;
	margin: 50rpx 10rpx 50rpx 10rpx;
}
.charge>.input>text{
	font-size: 100rpx;
}
.charge>.input>input{
	width: 95%;
	height: 120rpx;
	font-size: 100rpx;
	color: #13BEEC;
	border-color: #13BEEC; 
	border-style: solid; 
	border-top-width: 0rpx;
	border-right-width: 0rpx; 
	border-bottom-width: 1rpx;
	border-left-width: 0rpx;
}

.btn>button{
	margin: 0 20rpx;
	background-color: #13BEEC;
}