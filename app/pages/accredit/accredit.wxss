/* pages/accredit/accredit.wxss */

.logo{
	width: 100%;
	height: 400rpx;
	display: flex;
	justify-content: center;
	align-items: flex-end;
}

.logo view{
	width: 250rpx;
	height: 250rpx;
	border-radius: 50%;
}

.logo view image{
	width: 250rpx;
	height: 250rpx;
	border-radius: 50%;
}

.name{
	height: 100rpx;
	display: flex;
	justify-content: center;
	font-weight: bold;
	align-items: center;
}

.txt{
	margin: 150rpx 50rpx 150rpx 50rpx;
}

.txt view{
	margin: 30rpx 0;
}

.s{
	font-size: small;
	color: #AAAAAA;
}

.btn{
	display: flex;
	justify-content: center;
}

.btn button{
	width: 80%;
	border-radius: 100rpx;
	background-color: cadetblue;
	color: #FFF;
}
