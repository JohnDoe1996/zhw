/* pages/bill/bill.wxss */
@import "./templates/templates.wxss";

page{
  background-color: #ddd;
}

.user-nickname{
  background-color: #5F9EA0;
  color: white;
  font-size: 50rpx;
  width: 100%;
  height: 70rpx;
  margin: 70rpx 0; 
  display: flex;
	position: fixed;
  align-items: center;
  flex-direction: column;
  top: 0rpx;
}

.user-nickname text{
  margin-left: 200rpx;
  font-weight: bold;
}

.user-avatar{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  position: fixed;
  left: 30rpx;
  top: 0;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
}
