<!--index.wxml-->
<view class='user'>
  <view class='user-nickname'>
    <text>{{ userInfo.nickName }}</text>
  </view>
  <view class='user-avatar'>
    <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}"></image>
  </view>
</view>

<view style='height: 100rpx;'></view>

<view class='center'>
  <view class='sell' id='sell' name='sell' catchtap='sweepQR'>
    <view class='code' >
      <image src='/images/code.png'></image>
    </view>
    <view class='txt'><text>我要卖</text></view>
  </view>
</view>

<view class='center'>
  <view class='buy' id='buy' name='buy' catchtap='sweepQR'>
    <view class='code' >
      <image src='/images/code.png'></image>
    </view>
    <view class='txt'><text>我要买</text></view>
  </view>
</view>

<view class='person'>
  <view class='balance' id='balance' name='balance' catchtap='gotoPage'>
    <view class='img'>
      <image src='/images/coin.png'></image>
    </view>
    <view class='txt'><text>钱 包</text></view>
  </view>
  <view></view>
  <view class='history' class='history' id='history' name='coin' catchtap='gotoPage'>
    <view class='img'>
      <image src='/images/bill.png'></image>
    </view>
    <view class='txt'><text>记  录</text></view>
  </view>
</view>